<GridLayoutExample@GridLayout>:
    #one ofrows and columns need to be specified
    cols:2
    rows:2
    Button:
        text: "grid A"
        size_hint: 0.2,1
    BoxLayoutExample:
    Button:
        size_hint:0.2,1
        text: "gird C"

<AnchorLayoutExample>:
    #right, left, center
    anchor_x: "center"
    #bottom,top, center
    anchor_y: "top"
    BoxLayout:
        size_hint: .1,.1
        Button:
            text: "anchor A"

        Button:
            text: "anchor B"

<BoxLayoutExample>:
    orientation: "vertical"
    Button:
        text: "Hello"
        #size doesn't work here as it is fixed by layout, use size_hint and pos_hint which works on proportion 
        size_hint: .8,0.5 #hence 80% length and 50% breadth
    Button:
        text: "World"
        #size can be use when size_hint: None, None
        size: "40dp","40dp"
        size_hint: None, None
        #x, center_x,right
        #y,center_y, top
        pos_hint: {"center_x": 0.5}
    Button:
        text: "."
        #size can be use when size_hint: None, None
        size_hint: None, None
        width: "40dp"
        height: "40dp"
    BoxLayout:
        spacing: "10dp"
        Button:
            text: "haha"
        Button: 
            text: "This"
        Button: 
            text: "Works"

#for the definition
<MainWidget>:
    Button:
        text: "Hello"
        size: "40dp","40dp"
        pos: "40dp","40dp"
    Label
        text: "This is a label"
        size: "40dp","40dp"
        pos: "100dp","100dp"
        color: 0,1,1,1