<WidgetsExample>:
    cols: 3
    ToggleButton:
        text: "toggle"
        on_state: root.on_toggle(self)
    Button:
        text: "Count"
        on_press: root.on_button_click() #python function, no need for self but root
        disabled: not root.count_enable #nOt will reverse the boolean
    Label: 
        text: root.my_text #from python code
        font_name: 'fonts/Lcd.ttf'
        font_size: "80dp"
        color: 0,1,1,1
    Switch:
        id: my_switch
        on_active: root.on_switch(self)
        active: True

    Slider:
        id: my_slider #used in label below
        min: 0
        max: 100
        value:0 #default value
        orientation: 'horizontal' #default orientation
        disabled: not my_switch.active
        #on_value: root.on_slider(self) Not needed now
    BoxLayout:
        orientation: 'vertical'
        Label: 
            text: str(int(my_slider.value)) #using idd to get the values 
            font_name: "fonts/Lcd.ttf"
            font_size: "30dp"
            color: 0,1,1,1
        ProgressBar:
            max: 100
            value: my_slider.value
    TextInput:
        id: my_textinput
        text: "type something" #default 
        multiline: False #Not default
        on_text_validate: root.on_text_validates(self)
    Label:
        text: root.textinputs

        


